{
    "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": {
                "all": true
            },
            "complexity": {
                "all": true,
                "noUselessTypeConstraint": "off"
            },
            "correctness": {
                "all": true
            },
            "performance": {
                "all": true
            },
            "security": {
                "all": true
            },
            "style": {
                "all": true,
                "useTemplate": "off",
                "noNonNullAssertion": "off"
            },
            "suspicious": {
                "all": false
            }
        },
        "ignore": [".next/*", "node_modules/*", "public/*"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 100,
        "ignore": [".next/*", "node_modules/*", "public/*"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "quoteProperties": "preserve",
            "trailingComma": "es5",
            "semicolons": "asNeeded"
        }
    }
}
